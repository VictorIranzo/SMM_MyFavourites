<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourFavourites.MoviesPage">
    <ContentPage.Content>
        <ListView x:Name="entries">
            <!--<ListView.BackgroundColor>Blue</ListView.BackgroundColor>-->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!-- You can do it in the 2 ways-->
                    <TextCell
                        Text="{Binding Title}"
                        Detail="{Binding movie_year}"
                        DetailColor="Goldenrod"
                    />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>